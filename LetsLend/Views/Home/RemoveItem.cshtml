@{
}

@{
    ViewData["Title"] = "Remoção de Item";
}

@model Item

<h1>Removendo Item</h1>

<div class="container">
    <form method="post" asp-action="RemoveItem" asp-controller="home">

        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="Name">Nome:</label>
            <input asp-for="Name" class="form-control" disabled>
            <span asp-validation-for="Name" class="form-text text-muted"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Descrição:</label>
            <input asp-for="Description" class="form-control" disabled>
            <span asp-validation-for="Description" class="form-text text-muted"></span>
        </div>

        <button type="submit" class="btn btn-outline-dark">Remover</button>

    </form>
</div>
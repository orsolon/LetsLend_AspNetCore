@{
    ViewData["Title"] = "Lets Lend";
}

@model LetsLend.ViewModels.ItemViewModel

<div class="text-center">    
    <h1 class="display-4 mb-3">Let´s Lend</h1>
</div>
    <div class="d-flex justify-content-start m-5">
        <h5>Meus Itens <b class="text-success">Disponíveis</b> para emprétimo:</h5>
    </div>
        
  
    <div class="container">
        @foreach (var item in Model.Items)
        {
            if (item.IsAvaiable == true)
            {
                <div class="card shadow-sm mb-2 bg-body rounded">
                    <div class="card-body"><h5>@item.Name</h5></div>
                </div>
            }
        }
    </div>

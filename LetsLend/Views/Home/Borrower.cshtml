@{
    ViewData["Title"] = "Emprestimos";
}

@model LetsLend.ViewModels.BorrowerViewModel

<div class="text-center">
    <h1 class="display-4">Usuário</h1>
        <div class="d-flex justify-content-start m-5">
            <a asp-action="UserRegister" class="align-self-start">Cadastre um novo Usuário</a>
        </div>
        <p></p>
        <h5>Relatório de clientes Cadastradas:</h5>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">Email</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var borrower in Model.Borrowers)
                {
                    <tr>
                        <td>@borrower.Id</td>
                        <td>@borrower.Name</td>
                        <td>@borrower.Telefone</td>
                        <td>@borrower.Email</td>

                        <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-Id="@borrower.Id">Editar</a></td>

                        <td><a class="btn btn-danger" asp-controller="Home" asp-action="Remove" asp-route-Id="@borrower.Id">Remover</a></td>
                    </tr>

                }
            </tbody>

        </table>
    </div>

